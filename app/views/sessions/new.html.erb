<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <%= bootstrap_form_for(:session, url: login_path) do |f| %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Войти", class: "btn btn-primary" %>
    <% end %>

    <p>Создать аккаунт <%= link_to "регистрация", signup_path %></p>
  </div>
  <div class="col-md-3">
  </div>
</div>
