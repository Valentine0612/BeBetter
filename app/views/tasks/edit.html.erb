<div class="container">
  <div class="row">
  <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= bootstrap_form_for(@task, local: true) do |f| %>
        <div class="field">
        <%= f.text_field :title, autofocus: true, label: "Название" %>
        </div>

        <div class="field">
        <%= f.text_area :text, label: "Описание" %>
        </div>

        <div class="field">
      <%= f.date_field :date_finish, label: "Ожидаемая дата достижения цели" %>
      </div>

        <div class="actions">
          <%= f.primary "Обновить" %>
          <%= link_to('Назад',user_path(current_user), class: "btn btn-dark" )%>
        </div>
      <% end %>
      <br>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>