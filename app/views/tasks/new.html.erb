<div class="container">
  <div class="row">
  <div class="col-md-3">
  </div>
    <div class="col-md-6">
    <%= bootstrap_form_for(:task, url: tasks_path) do |f| %>
      <div class="field">
      <%= f.text_field :title, autofocus: true, label: "Название" %>
      </div>

      <div class="field">
      <%= f.text_area :text, label: "Описание" %>
      </div>

      <div class="actions">
      <%= f.primary "Создать" %>
      </div>
    <% end %>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>