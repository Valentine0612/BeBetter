<table class="table">
  <thead>
    <tr>
      <th scope="col">Создано</th>
      <th scope="col">Название</th>
      <th scope="col">Описание</th>
      <th scope="col">Обновлено</th>
      <%# <th scope="col"></th> %>
      <th scope="col">Действия</th>
      <%# <th scope="col"></th> %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.created_at.strftime('%d.%m') %></td>
          <td><%= task.title %></td>   
          <td><%= task.text %></td>
          <td><%= task.updated_at.strftime('%d.%m') %></td>
          <%# <td><%= link_to 'Просмотр', task_path(task) %></td> 
          <td><%= link_to 'Редактировать', edit_task_path(task) %></td>
          <%# <td><%= link_to 'Выполнено', task_path(task),
            method: :delete%></td>
        </tr>
      <% end %>
    </tr>
  </tbody>
</table>